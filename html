    <script>
        let visitorCount = Math.floor(Math.random() * 9000000) + 1000000;
        let currentUsers = Math.floor(Math.random() * 100) + 20;
        
        setInterval(() => {
            visitorCount += Math.floor(Math.random() * 50);
            currentUsers = Math.floor(Math.random() * 100) + 20;
            document.getElementById('visitor').textContent = visitorCount.toLocaleString();
            document.getElementById('current').textContent = currentUsers;
        }, 3000);
        
        document.getElementById('visitor').textContent = visitorCount.toLocaleString();
        document.getElementById('current').textContent = currentUsers;
        
        function buy(productNum) {
            document.getElementById('overlay').style.display = 'block';
            document.getElementById('popup').style.display = 'block';
        }
        
        function closePopup() {
            document.getElementById('overlay').style.display = 'none';
            document.getElementById('popup').style.display = 'none';
        }
        
        function confirmBuy() {
            alert('🛸 구매 완료!\n\n차원 이동 배송이 시작되었습니다.\n배송 예정일: ████년 ██월 ██일\n\n※ 시공간 왜곡으로 인해 어제 도착했을 수도 있습니다.');
            closePopup();
        }
        
        // 랜덤 글리치 효과
        setInterval(() => {
            if (Math.random() > 0.95) {
                document.body.style.filter = 'hue-rotate(' + Math.random() * 360 + 'deg)';
                setTimeout(() => {
                    document.body.style.filter = 'none';
                }, 100);
            }
        }, 2000);
        
        // 콘솔 메시지
        console.log('%c👽 당신은 감시받고 있습니다', 'color: #0f0; font-size: 20px;');
        console.log('%c우리는 당신의 구매 패턴을 분석중입니다...', 'color: #ff00ff; font-size: 16px;');
    </script>
